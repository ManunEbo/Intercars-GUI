<Deposit_in_one_Screen>:
    Screen:
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.7,0.8)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}            
            canvas.before:
                Color: 
                    rgba:(30/255, 31/255, 30/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            padding: 19
            spacing: 19
            

            MDLabel:
                id: Deposit_in_one_options
                text: "Single payment Deposit"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
            
            ScrollView:
                size_hint_y: 0.75
                do_scroll_x: False
                do_scroll_y: True
                pos_hint: {"center_x": 0.5, "center_y": 0.5} 
                GridLayout:
                    cols: 2
                    padding: 10
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.6, "center_y": 0.7}
                    row_force_default: True
                    row_default_height: 40

                    MDLabel:
                        id: Payment_method_id
                        text: "Payment method"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200                

                    Spinner:
                        id: deposit_in_one_payment_method_spin_id
                        pos: self.parent.pos
                        size_hint: None, None
                        size: (220,30)                        
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color: 
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        values: ["Transfer","Card","Cash"]
                        on_text: root.dep_sal_option_choice(deposit_in_one_payment_method_spin_id.text)
                    
                    MDLabel:
                        id: Transfer_ref_id
                        text: "Transfer reference"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    MDTextFieldRound:
                        id: deposit_in_one_transfer_ref_textf
                        hint_text: "Transfer reference"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 18

                    MDLabel:
                        id: Card_numb_id
                        text: "Card number"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    MDTextFieldRound:
                        id: deposit_in_1_card_nbr_textf
                        hint_text: "Card number"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 18
                    
                    MDLabel:
                        id: Debit_type_id
                        text: "Debit type"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    Spinner:
                        id: Deposit_in_1_Debit_type_spin_id
                        size_hint: None, None
                        size: (220,30)
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color: 
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        values: ["MasterCard","Maestro","Visa","Visa Electron","Visa Delta","Delta"]
                        on_text: root.Deposit_Debit_type(Deposit_in_1_Debit_type_spin_id.text)

                    MDLabel:
                        id: Card_Expiry_id
                        text: "Card Expiry date"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDRoundFlatButton:                        
                        text: "Open Date Picker"
                        font_size: 12
                        on_release:
                            root.Deposit_card_Exp_date_picker()

                    MDLabel:
                        id: Card_Start_id
                        text: "Card start date"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDRoundFlatButton:
                        text: "Open Date Picker"
                        font_size: 12
                        on_release:
                            root.Deposit_card_start_date_picker()

                    MDLabel:
                        id: Deposit_transaction_Date_id
                        text: "Deposit date"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDRoundFlatButton:
                        text: "Open Date Picker"
                        font_size: 12
                        on_release:
                            root.Deposit_transaction_date_picker()

                    MDLabel:
                        id: Deposit_transaction_time_id
                        text: "Deposit Time"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDRoundFlatButton:
                        text: "Open Time Picker"
                        font_size: 12
                        on_release:
                            root.show_Deposit_time_picker()

                    MDLabel:
                        id: Deposit_auth_id
                        text: "Authorization code"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    MDTextFieldRound:
                        id: Deposit_in_1_auth_textf
                        hint_text: "Authorization code"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 14

                    MDLabel:
                        id: Deposit_Amount_id
                        text: "Deposit Amount"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    MDTextFieldRound:
                        id: Deposit_in_1_Amount_textf
                        hint_text: "Deposit amount"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 14

                    MDLabel:
                        id: Receipt_nbr_id
                        text: "Receipt number"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    MDTextFieldRound:
                        id: Deposit_in_1_Receipt_nbr_textf
                        hint_text: "Receipt number"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 14

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"x": 0.4, "y": 0.02}
            padding: 15
            elevation: 10
            on_release:
                app.change_screen("deposit_or_sale")
        
        MDRoundFlatButton:
            text: "Submit"
            font_size: 12
            pos_hint: {"x": 0.55,"y": 0.02}
            padding: 15
            elevation: 10
            on_release:
                root.Deposit_in_1_submit()
            


        MDNavigationLayout:
            ScreenManager:
                id: menu_mnger
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: 'Customer'
                            anchor_title: "center"
                            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                            elevation: 10

                        Widget:                    
                        
            MDNavigationDrawer:
                id: nav_drawer
                elevation: 10
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Uploads'
                        font_style: 'Caption'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            OneLineIconListItem:
                                text: 'Vehicle'
                                IconLeftWidget:
                                    icon: 'car'

                            OneLineIconListItem:
                                text: 'Customer'
                                IconLeftWidget:
                                    icon: 'human-queue'
                            
                            OneLineIconListItem:
                                text: 'Staff'
                                IconLeftWidget:
                                    icon: 'human-capacity-increase'

                            OneLineIconListItem:
                                text: 'Auction'
                                IconLeftWidget:
                                    icon: 'human-greeting'

                            OneLineIconListItem:
                                text: 'Garage'
                                IconLeftWidget:
                                    icon: 'engine'
                            
                            OneLineIconListItem:
                                text: 'Deposit & Sale'
                                IconLeftWidget:
                                    icon: 'cash-multiple'
                            
                            OneLineIconListItem:
                                text: 'Operation'
                                IconLeftWidget:
                                    icon: 'lighthouse-on'

                            MDLabel:
                                text: 'Analytics'
                                font_style: 'Caption'
                                size_hint_y: None
                                height: self.texture_size[1]
                    

                            OneLineIconListItem:
                                text: 'Data'
                                IconLeftWidget:
                                    icon: 'facebook'

                            OneLineIconListItem:
                                text: 'Graph'
                                IconLeftWidget:
                                    icon: 'auto-upload'
                            
                            OneLineIconListItem:
                                text: 'Summary'
                                IconLeftWidget:
                                    icon: 'logout'    