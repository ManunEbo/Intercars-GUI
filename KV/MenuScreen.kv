<MenuScreen>:
    Screen:
        MDCard:
            size_hint: None, None
            size: 300, 500
            pos_hint: {"center_x": 0.3, "center_y": 0.5}
            elevation: 10
            padding: 15
            spacing: 15

            orientation: "vertical"

            MDLabel:
                id: welcome_label
                text: "Analytics"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDRoundFlatButton:
                text: "Vehicle"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                #on_press: app.logger()

            MDRoundFlatButton:
                text: "Garages"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                #on_press: app.clear()

            MDRoundFlatButton:
                text: "Call log"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                #on_press: app.clear()
            
            MDRoundFlatButton:
                text: "Vehicle viewing"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                #on_press: app.clear()
            
            # Adding an empty widget to push everything up the screen
            Widget:
                size_hint_y: None
                height: 10
            
            Widget:
                size_hint_y: None
                height: 10
            
            Widget:
                size_hint_y: None
                height: 10
            
            Widget:
                size_hint_y: None
                height: 10
                
        MDCard:
            size_hint: None, None
            size: 300, 500
            pos_hint: {"center_x": 0.7, "center_y": 0.5}
            elevation: 10
            padding: 15
            spacing: 15

            orientation: "vertical"

            MDLabel:
                id: welcome_label1
                text: "Upload"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDRoundFlatButton:
                text: "Vehicle"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("vehiclescreen")

            MDRoundFlatButton:
                text: "Customer"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("customerscreen")
            
            MDRoundFlatButton:
                text: "Staff"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("staff_screen")

            MDRoundFlatButton:
                text: "Auction"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("auction_menu_screen")
            
            MDRoundFlatButton:
                text: "Garage"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("garage_screen")
            
            MDRoundFlatButton:
                text: "Operation"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("operation_screen")
            
            # Adding an empty widget to push everything up the screen
            Widget:
                size_hint_y: None
                height: 10

        MDNavigationLayout:
            ScreenManager:
                id: menu_mnger
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: 'Main menu'
                            anchor_title: "center"
                            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                            elevation: 10

                        Widget:                    
                        
            MDNavigationDrawer:
                id: nav_drawer
                elevation: 10
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Uploads'
                        font_style: 'Caption'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            OneLineIconListItem:
                                text: 'Vehicle'
                                IconLeftWidget:
                                    icon: 'car'

                            OneLineIconListItem:
                                text: 'Customer'
                                IconLeftWidget:
                                    icon: 'human-queue'
                            
                            OneLineIconListItem:
                                text: 'Staff'
                                IconLeftWidget:
                                    icon: 'human-capacity-increase'

                            OneLineIconListItem:
                                text: 'Auction'
                                IconLeftWidget:
                                    icon: 'human-greeting'

                            OneLineIconListItem:
                                text: 'Garage'
                                IconLeftWidget:
                                    icon: 'engine'
                            
                            OneLineIconListItem:
                                text: 'Deposit & Sale'
                                IconLeftWidget:
                                    icon: 'cash-multiple'
                            
                            OneLineIconListItem:
                                text: 'Operation'
                                IconLeftWidget:
                                    icon: 'lighthouse-on'

                            MDLabel:
                                text: 'Analytics'
                                font_style: 'Caption'
                                size_hint_y: None
                                height: self.texture_size[1]
                    

                            OneLineIconListItem:
                                text: 'Data'
                                IconLeftWidget:
                                    icon: 'facebook'

                            OneLineIconListItem:
                                text: 'Graph'
                                IconLeftWidget:
                                    icon: 'auto-upload'
                            
                            OneLineIconListItem:
                                text: 'Summary'
                                IconLeftWidget:
                                    icon: 'logout'    