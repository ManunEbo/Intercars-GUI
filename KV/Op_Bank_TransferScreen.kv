<Op_Bank_TransferScreen>:
    Screen:
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.6,0.7)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}            
            canvas.before:
                Color: 
                    rgba:(30/255, 31/255, 30/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            padding: 19
            spacing: 19

            MDLabel:
                id: Op_bank_transfer_lbl
                text: "Op Bank Transfer"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
            
            ScrollView:
                size_hint_y: 0.75
                do_scroll_x: False
                do_scroll_y: True
                pos_hint: {"center_x": 0.5, "center_y": 0.5} 
                GridLayout:
                    cols: 2
                    padding: 10
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.6, "center_y": 0.7}
                    row_force_default: True
                    row_default_height: 40

                    MDLabel:
                        id: Serv_type_lbl
                        text: "Service type"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    Spinner:
                        id: Serv_type_Receipt_spin_id
                        pos: self.parent.pos
                        size_hint: None, None
                        size: (220,30)                        
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color: 
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        values: ["Carwash","Electrical","Mechanic","MOT"]                        
                        on_text: root.Service_type_Receip(Serv_type_Receipt_spin_id.text)

                    MDLabel:
                        id: Service_invoice_lbl
                        text: "Service invoice"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200                

                    Spinner:
                        id: Service_invoice_select_spin_id
                        size_hint: None, None
                        size: (240,30)
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color: 
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        on_text: root.Serv_Receipt_invoice(Service_invoice_select_spin_id.text)

                    MDLabel:
                        id: Split_payment_lbl
                        text: "Split payment"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    Spinner:
                        id: Split_payment_select_spin_id
                        size_hint: None, None
                        size: (220,30)
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color: 
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        on_text: root.Split_payment(Split_payment_select_spin_id.text)

                    MDLabel:
                        id: Transfer_date_lbl
                        text: "Transfer date"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDRoundFlatButton:
                        text: "Select Date"
                        font_size: 12
                        on_release:
                            root.Transfer_date_picker()

                    MDLabel:
                        id: Transfer_Amount_lbl
                        text: "Transfer Amount"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDTextFieldRound:
                        id: Transfer_Amount_textf
                        hint_text: "Transfer Amount"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 14

                    MDLabel:
                        id: VAT_Flag_lbl
                        text: "VAT receipt?"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200
                    
                    Spinner:
                        id: VAT_Flag_spin_id
                        pos: self.parent.pos
                        size_hint: None, None
                        size: (220,30)                        
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color: 
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        values: ["N","Y"]                        
                        on_text: root.VAT_Receip(VAT_Flag_spin_id.text)

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.4}
            padding: 15
            elevation: 10
            on_release:
                app.change_screen("operation_screen")

        MDRoundFlatButton:
            text: "Submit"
            font_size: 12
            pos_hint: {"center_x": 0.6}
            padding: 15
            elevation: 10
            on_release:
                root.Submit_bank_transfer()
                
            Widget:
                size_hint_y: None
                height: 30
                

            Widget:
                size_hint_y: None
                height: 30
             


        MDNavigationLayout:
            ScreenManager:
                id: menu_mnger
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: 'Operation'
                            anchor_title: "center"
                            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                            elevation: 10

                        Widget:                    
                        
            MDNavigationDrawer:
                id: nav_drawer
                elevation: 10
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Uploads'
                        font_style: 'Caption'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            OneLineIconListItem:
                                text: 'Vehicle'
                                IconLeftWidget:
                                    icon: 'car'

                            OneLineIconListItem:
                                text: 'Customer'
                                IconLeftWidget:
                                    icon: 'human-queue'
                            
                            OneLineIconListItem:
                                text: 'Staff'
                                IconLeftWidget:
                                    icon: 'human-capacity-increase'

                            OneLineIconListItem:
                                text: 'Auction'
                                IconLeftWidget:
                                    icon: 'human-greeting'

                            OneLineIconListItem:
                                text: 'Garage'
                                IconLeftWidget:
                                    icon: 'engine'
                            
                            OneLineIconListItem:
                                text: 'Deposit & Sale'
                                IconLeftWidget:
                                    icon: 'cash-multiple'
                            
                            OneLineIconListItem:
                                text: 'Operation'
                                IconLeftWidget:
                                    icon: 'lighthouse-on'

                            MDLabel:
                                text: 'Analytics'
                                font_style: 'Caption'
                                size_hint_y: None
                                height: self.texture_size[1]
                    

                            OneLineIconListItem:
                                text: 'Data'
                                IconLeftWidget:
                                    icon: 'facebook'

                            OneLineIconListItem:
                                text: 'Graph'
                                IconLeftWidget:
                                    icon: 'auto-upload'
                            
                            OneLineIconListItem:
                                text: 'Summary'
                                IconLeftWidget:
                                    icon: 'logout'