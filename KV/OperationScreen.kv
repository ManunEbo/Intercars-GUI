<OperationScreen>:
    Screen:
        MDCard:
            size_hint: None, None
            size: 300, 400
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 15
            spacing: 15

            orientation: "vertical"

            MDLabel:
                id: Operation_screen_label
                text: "Operation"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            Widget:
                size_hint_y: None
                height: 10

            MDRoundFlatButton:
                text: "Op Service"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("op_service_screen")

            MDRoundFlatButton:
                text: "Op Service Receipt"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("op_service_receipt_screen")

            MDRoundFlatButton:
                text: "Op Bank Transfer"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("op_bank_transfer_screen")
            
            MDRoundFlatButton:
                text: "Op Miscellaneous Receipt"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("op_miscellaneous_receipt_screen")
            
            # Adding an empty widget to push everything up the screen
            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10            

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                app.change_screen("menuscreen")                

        Widget:
            size_hint_y: None
            height: 10
        
        Widget:
            size_hint_y: None
            height: 10
        
        Widget:
            size_hint_y: None
            height: 10

        MDNavigationLayout:
            ScreenManager:
                id: menu_mnger
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: 'Operation menu'
                            anchor_title: "center"
                            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                            elevation: 10

                        Widget:                    
                        
            MDNavigationDrawer:
                id: nav_drawer
                elevation: 10
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Uploads'
                        font_style: 'Caption'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            OneLineIconListItem:
                                text: 'Vehicle'
                                IconLeftWidget:
                                    icon: 'car'

                            OneLineIconListItem:
                                text: 'Customer'
                                IconLeftWidget:
                                    icon: 'human-queue'
                            
                            OneLineIconListItem:
                                text: 'Staff'
                                IconLeftWidget:
                                    icon: 'human-capacity-increase'

                            OneLineIconListItem:
                                text: 'Auction'
                                IconLeftWidget:
                                    icon: 'human-greeting'

                            OneLineIconListItem:
                                text: 'Garage'
                                IconLeftWidget:
                                    icon: 'engine'
                            
                            OneLineIconListItem:
                                text: 'Deposit & Sale'
                                IconLeftWidget:
                                    icon: 'cash-multiple'
                            
                            OneLineIconListItem:
                                text: 'Operation'
                                IconLeftWidget:
                                    icon: 'lighthouse-on'

                            MDLabel:
                                text: 'Analytics'
                                font_style: 'Caption'
                                size_hint_y: None
                                height: self.texture_size[1]
                    

                            OneLineIconListItem:
                                text: 'Data'
                                IconLeftWidget:
                                    icon: 'facebook'

                            OneLineIconListItem:
                                text: 'Graph'
                                IconLeftWidget:
                                    icon: 'auto-upload'
                            
                            OneLineIconListItem:
                                text: 'Summary'
                                IconLeftWidget:
                                    icon: 'logout'    