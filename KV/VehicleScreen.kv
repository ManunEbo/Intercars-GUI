<VehicleScreen>:
    Screen:
        MDCard:
            size_hint: None, None
            size: 500, 500
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            elevation: 10
            padding: 15
            spacing: 15

            orientation: "vertical"

            MDLabel:
                id: vehiclescreen_label1
                text: "Vehicle"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDRoundFlatButton:
                text: "V5C"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("v5c")

            MDRoundFlatButton:
                text: "MOT History"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("mot_history")
            
            MDRoundFlatButton:
                text: "MOT Refusal"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("mot_refusal")

            MDRoundFlatButton:
                text: "Service History"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("service_history")
            
            MDRoundFlatButton:
                text: "Mileage History"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("mileage_history")
            
            MDRoundFlatButton:
                text: "Call Log"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("call_log")
            
            MDRoundFlatButton:
                text: "Vehicle Viewing"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.change_screen("vehicle_viewing")
            
            # Adding an empty widget to push everything up the screen
            Widget:
                size_hint_y: None
                height: 10
        
        BoxLayout:
            orientation: 'vertical'
            MDRoundFlatButton:
                text: "Back"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                padding: 15
                elevation: 10
                on_release:
                    app.change_screen("menuscreen")
            
            Widget:
                size_hint_y: None
                height: 10

        MDNavigationLayout:
            ScreenManager:
                id: menu_mnger
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: 'Vehicle'
                            anchor_title: "center"
                            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                            elevation: 10

                        Widget:                    
                        
            MDNavigationDrawer:
                id: nav_drawer
                elevation: 10
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Uploads'
                        font_style: 'Caption'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            OneLineIconListItem:
                                text: 'Vehicle'
                                IconLeftWidget:
                                    icon: 'car'

                            OneLineIconListItem:
                                text: 'Customer'
                                IconLeftWidget:
                                    icon: 'human-queue'
                            
                            OneLineIconListItem:
                                text: 'Staff'
                                IconLeftWidget:
                                    icon: 'human-capacity-increase'

                            OneLineIconListItem:
                                text: 'Auction'
                                IconLeftWidget:
                                    icon: 'human-greeting'

                            OneLineIconListItem:
                                text: 'Garage'
                                IconLeftWidget:
                                    icon: 'engine'
                            
                            OneLineIconListItem:
                                text: 'Deposit & Sale'
                                IconLeftWidget:
                                    icon: 'cash-multiple'
                            
                            OneLineIconListItem:
                                text: 'Operation'
                                IconLeftWidget:
                                    icon: 'lighthouse-on'

                            MDLabel:
                                text: 'Analytics'
                                font_style: 'Caption'
                                size_hint_y: None
                                height: self.texture_size[1]
                    

                            OneLineIconListItem:
                                text: 'Data'
                                IconLeftWidget:
                                    icon: 'facebook'

                            OneLineIconListItem:
                                text: 'Graph'
                                IconLeftWidget:
                                    icon: 'auto-upload'
                            
                            OneLineIconListItem:
                                text: 'Summary'
                                IconLeftWidget:
                                    icon: 'logout'    